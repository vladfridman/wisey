package systems.vos.wisey.compiler.tests;

import wisey.lang.IProgram;

model MException {
  int mValue;

  public int getValue() {
    return mValue;
  }
}

model MAnotherException {
  int mValue;

  public int getValue() {
    return mValue;
  }
}

controller CThrower {
  public int doThrow() throws MException, MAnotherException {
    MException* exception = builder(MException).withValue(63).build();
    throw exception;
    return 4;
  }

  public int doNotThrow() throws MException {
    return 5;
  }
}

controller CCatcher {
  inject CThrower* mThrower;

  public int doTryCatch() {
    try {
      mThrower.doNotThrow();
      try {
        return mThrower.doThrow();
      } catch(MAnotherException* exception) {
        return exception.getValue() + 1;
      }
    } catch (MException* exception) {
      return exception.getValue() + 2;
    }
  }
}

controller CProgram implements IProgram {
  inject CCatcher* mCatcher;

  public int run() {
    return mCatcher.doTryCatch();
  }
}

bind(CProgram).to(IProgram);
