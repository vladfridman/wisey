package systems.vos.wisey.compiler.tests;

interface ICalculator {
  int calculate();
}

controller CFibonacciCalculator implements ICalculator {

  receive int mIndex;

  public int calculate() {
    int previous = 0;
    int current = 1;
    if (mIndex <= 0) {
      return mIndex;
    }    
    for (int i = 1; i < mIndex; i++) {
      int next = previous + current;
      previous = current;
      current = next;
    }
    return current;
  }
}

bind(CFibonacciCalculator).to(ICalculator);

controller CProgram implements IProgram {
  inject ICalculator* mCalculator(6);

  public int run() {
    return mCalculator.calculate();
  }
}

bind(CProgram).to(IProgram);
