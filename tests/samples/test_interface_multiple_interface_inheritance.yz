package systems.vos.wisey.compiler.tests;

import wisey.lang.IProgram;

interface IObject {
  int getSize();
}

interface IHasDoor {
  void open();
}

interface IDevice extends IHasDoor, IObject {
}

model MFridge implements IDevice {
  int mSize;

  public void open() override {
  }

  public int getSize() override {
    return mSize;
  }
}

controller CProgram implements IProgram {

  public long run(immutable string[] arguments) override {
    MFridge* fridge = builder(MFridge).withSize(15).build();

    return ((IDevice) fridge).getSize();
  }
}

bind(IProgram).to(CProgram);
