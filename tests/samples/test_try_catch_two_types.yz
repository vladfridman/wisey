package systems.vos.wisey.compiler.tests;

import wisey.lang.IException;
import wisey.lang.IProgram;
import wisey.lang.NString;

model MException implements IException {
  int mValue;

  public int getValue() {
    return mValue;
  }

  public NString* report() override {
    return callstack.reportException(this);
  }
}

model MAnotherException implements IException {
  int mValue;

  public int getValue() {
    return mValue;
  }

  public NString* report() override {
    return callstack.reportException(this);
  }
}

controller CThrower {
  public int doThrow() throws MException, MAnotherException {
    throw build(MAnotherException).withValue(127).onHeap();
  }
}

controller CCatcher {
  inject CThrower* mThrower;

  public int doTryCatch() {
    try {
      mThrower.doThrow();
    } catch (MException* exception) {
      return exception.getValue();
    } catch (MAnotherException* exception) {
      return exception.getValue();
    }
    return 5;
  }
}

controller CProgram implements IProgram {
  inject CCatcher* mCatcher;

  public int run(immutable string[] arguments) override {
    return mCatcher.doTryCatch();
  }
}

bind(IProgram).to(CProgram);
