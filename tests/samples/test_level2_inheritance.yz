package systems.vos.wisey.compiler.tests;

import wisey.lang.IProgram;

interface IObject {
  int getColor(int a);
}

interface IShape extends IObject {
  int getPerimeter();
  int getArea();
}

interface IClickable {
  void click();
  void tap();
}

model MSquare implements IClickable, IShape {
  int mWidth;

  public int getPerimeter() {
    return mWidth + mWidth;
  }

  public int getArea() {
    return mWidth * mWidth;
  }

  public int getColor(int a) {
    return a;
  }

  public void click() {
  }

  public void tap() {
  }
}

controller CProgram implements IProgram {

  public int run() {
    MSquare* square = builder(MSquare).withWidth(5).build();

    return square.getPerimeter() + square.getArea() + square.getColor(55) + 
      ((IShape) square).getPerimeter() + ((IShape) square).getArea() + 
      ((IShape) square).getColor(55) + ((IObject) square).getColor(55);
  }
}

bind(CProgram).to(IProgram);
