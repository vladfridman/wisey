package systems.vos.wisey.compiler.tests;

interface IShape {
  int getPerimeter();
  int getArea();
}

interface IObject {
  int getColor(int a);
}

interface IClickable {
  void click();
  void tap();
}

model MSquare implements IShape, IObject, IClickable {
  int mWidth;

  public int getPerimeter() {
    return mWidth + mWidth;
  }

  public int getArea() {
    return mWidth * mWidth;
  }

  public int getColor(int a) {
    return a;
  }

  public void click() {
  }

  public void tap() {
  }
}

controller CProgram implements IProgram {

  public int run() {
    MSquare* square = builder(MSquare).withWidth(5).build();

    return ((IObject) square).getColor(55) + ((IShape) square).getArea() + 
      ((IShape) square).getPerimeter();
  }
} 

bind(CProgram).to(IProgram);
