package systems.vos.wisey.compiler.tests;

import wisey.data.CReferenceVector;
import wisey.lang.IProgram;

model MCar {
  int mYear;

  public int getYear() {
    return mYear;
  }
}

controller CProgram implements IProgram {
  inject CReferenceVector* mVector.withCapacity(3);

  public int run(immutable string[] arguments) override {
    MCar* car1 = build(MCar).withYear(2018).onHeap();
    MCar* car2 = build(MCar).withYear(2017).onHeap();
    MCar* car3 = build(MCar).withYear(2016).onHeap();
    MCar* car4 = build(MCar).withYear(2015).onHeap();

    printout("Vector size: " + mVector.getSize() + ", capacity: " + mVector.getCapacity() + "\n");
    
    mVector.pushBack(car1);

    printout("Vector size: " + mVector.getSize() + ", capacity: " + mVector.getCapacity() + "\n");

    mVector.pushBack(car2);

    printout("Vector size: " + mVector.getSize() + ", capacity: " + mVector.getCapacity() + "\n");

    mVector.pushBack(car3);

    printout("Vector size: " + mVector.getSize() + ", capacity: " + mVector.getCapacity() + "\n");

    mVector.pushBack(car4);

    printout("Vector size: " + mVector.getSize() + ", capacity: " + mVector.getCapacity() + "\n");

    MCar car = mVector.popBack();

    printout("Car year: " + car.getYear() + "\n");

    printout("Vector size: " + mVector.getSize() + ", capacity: " + mVector.getCapacity() + "\n");

    MCar carRef = mVector.getAt(0);

    mVector.clear();

    printout("Car year: " + carRef.getYear() + "\n");

    return 1;
  }
}

bind(IProgram).to(CProgram);
