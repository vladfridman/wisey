package systems.vos.wisey.compiler.tests;

import wisey.lang.CMemoryPool;
import wisey.lang.IProgram;

node NCar onPool {
  receive int mYear;

  public int getYear() {
    return mYear;
  }
}

controller CProgram implements IProgram {
  inject CMemoryPool* mPool;

  public int run(immutable string[] arguments) override {
    NCar* car1 = allocator(NCar).withYear(2018).onPool(mPool);
    NCar* car2 = allocator(NCar).withYear(2017).onPool(mPool);
    NCar* car3 = allocator(NCar).withYear(2016).onPool(mPool);
    car1 = null;
    NCar* car4 = allocator(NCar).withYear(2015).onPool(mPool);
    return car2.getYear();
  }
}

bind(IProgram).to(CProgram);
